<% layout('layout') %>

<div class="container">
  <% if (user.type === 'rider') { %>
    <h2>Request your ride</h2>
    <div class="row">
      <div class="col-md-3">
        <button class="btn btn-success btn-large" onclick="requestRide()">Request a ride</button>
      </div> <!-- /column -->
      <div class="col-md-0">
        <div class="text-center" id="loading"></div>
      </div> <!-- /column -->
      <div class="col-md-4">
        <div id="googleMap" style="width:600px;height:400px;"></div>
      </div> <!-- /column -->
    </div> <!-- /row -->
  <% } else { %>
    <h2> Sorry, you are currently signed in as a Driver </h2>
    <h3> Please sign in as a Rider to request a ride </h3>
  <% } %>
</div> <!-- /container -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/spin.js/2.3.2/spin.min.js"></script>
<script src="assets/js/getLocation.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDft3gHzDbRFlLm2oMfkOB9MmaYj0aNzjU&callback=initMap" async defer>
</script>
